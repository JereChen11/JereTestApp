<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/get_pref_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="getPreferences()"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/get_shared_pref_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:text="getSharedPreferences()"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/get_default_shared_pref_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="getDefaultSharedPreferences()"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/show_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:gravity="center"/>

</LinearLayout>