<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_avatar_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/avatar_circle"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_message_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/my_bubble_message_style"
        android:gravity="end|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Hi, How Are You!"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/user_avatar_iv"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/robot_avatar_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/robot_avatar_circle"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:src="@drawable/robot_avatar_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/robot_message_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, How Are You!"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="start|center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/robot_bubble_message_style"
        android:visibility="gone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/robot_avatar_iv"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>